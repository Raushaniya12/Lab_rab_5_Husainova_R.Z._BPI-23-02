<Window x:Class="Lab_rab_5_Husainova_R.Z._BPI_23_02.View.WindowNewEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:Lab_rab_5_Husainova_R.Z._BPI_23_02.ViewModel"
        xmlns:local="clr-namespace:Lab_rab_5_Husainova_R.Z._BPI_23_02.View"
        mc:Ignorable="d"
        Title="Новый сотрудник" Height="320" Width="500" MinHeight="320" MinWidth="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <WrapPanel Grid.Column="1" HorizontalAlignment="Right">
            <Button Content="☀️" 
        Command="{Binding Source={x:Static vm:PersonViewModel.Instance}, Path=SwitchLightTheme}" 
        Margin="5"/>
            <Button Content="🌙" 
        Command="{Binding Source={x:Static vm:PersonViewModel.Instance}, Path=SwitchDarkTheme}" 
        Margin="5"/>
        </WrapPanel>
        <Label Grid.Row="1" Grid.Column="0" Content="Код:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="1" Grid.Column="1" 
                 Text="{Binding Id}" IsReadOnly="True" VerticalAlignment="Center"/>
        <Label Grid.Row="2" Grid.Column="0" Content="Должность:" VerticalAlignment="Center"/>
        <ComboBox Grid.Row="2" Grid.Column="1" ItemsSource="{Binding Roles}"
          DisplayMemberPath="NameRole"
          SelectedValuePath="NameRole"
          SelectedValue="{Binding RoleName}" />
        <Label Grid.Row="3" Grid.Column="0" Content="Фамилия:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="3" Grid.Column="1"  
                 Text="{Binding LastName}" VerticalAlignment="Center"/>
        <Label Grid.Row="4" Grid.Column="0" Content="Имя:" VerticalAlignment="Center"/>
        <TextBox Grid.Row="4" Grid.Column="1" 
                 Text="{Binding FirstName}" VerticalAlignment="Center"/>
        <Label Grid.Row="5" Grid.Column="0" Content="Дата рождения:" VerticalAlignment="Center"/>
        <DatePicker Grid.Row="5" Grid.Column="1" 
                    SelectedDate="{Binding Birthday, StringFormat={}{0:dd.MM.yyyy}}" VerticalAlignment="Center"/>

        <StackPanel Grid.Row="7" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Сохранить" Width="80" Height="25" Margin="0,0,10,0"
        Command="{Binding SaveCommand}" IsDefault="True"/>
            <Button Content="Отмена" Width="80" Height="25"
        IsCancel="True"/>
        </StackPanel>
    </Grid>
</Window>
