<Application x:Class="Lab_rab_5_Husainova_R.Z._BPI_23_02.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Lab_rab_5_Husainova_R.Z._BPI_23_02"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="TextBoxDate" TargetType="TextBox">
            <Style.Triggers>
                <!-- При получении фокуса TextBox скрывается, показывая DatePicker -->
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="Visibility" Value="Hidden"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Application.Resources>
</Application>
